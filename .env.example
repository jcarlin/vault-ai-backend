# Vault AI Backend â€” Environment Variables
# Copy to .env and customize for your deployment

# vLLM / Ollama backend URL (required)
VLLM_BASE_URL=http://localhost:8001
# Optional API key for vLLM authentication
# VLLM_API_KEY=

# Secret key for API key hashing (change this!)
VAULT_SECRET_KEY=change-me-to-a-random-64-char-string

# Database URL (SQLite for Rev 1)
VAULT_DB_URL=sqlite+aiosqlite:///data/vault.db

# Logging level: debug, info, warning, error
VAULT_LOG_LEVEL=info

# Path to model manifest JSON
VAULT_MODELS_MANIFEST=config/models.json

# Allowed CORS origins (comma-separated)
VAULT_CORS_ORIGINS=https://vault-cube.local

# Setup wizard (use local paths for dev, /opt/vault/... on Cube)
VAULT_SETUP_FLAG_PATH=data/.setup_complete
VAULT_TLS_CERT_DIR=data/tls

# Quarantine pipeline
VAULT_QUARANTINE_DIR=data/quarantine

# Cloud deployment (leave defaults for Cube / local dev)
# VAULT_DEPLOYMENT_MODE=cube
# VAULT_ACCESS_KEY=

# HTTP client timeouts (seconds)
# VAULT_HTTP_CONNECT_TIMEOUT=5.0
# VAULT_HTTP_READ_TIMEOUT=120.0
